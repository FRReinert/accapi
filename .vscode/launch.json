    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Módulo",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "args": ["account_api.main:app","--reload"]
        },
        {
            "name": "Main File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/account_api/main.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}